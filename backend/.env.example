# ============================================
# KisanMitra Backend Environment Variables
# Copy this to .env and fill in your values
# ============================================

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/kisanmitra

# Secret Key for JWT/Sessions
SECRET_KEY=your-secure-secret-key-here

# OpenWeather API (https://openweathermap.org/api)
OPENWEATHER_KEY=your-openweather-api-key

# Twilio WhatsApp (https://www.twilio.com/console)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886
